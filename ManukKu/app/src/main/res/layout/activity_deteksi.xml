<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetectActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detect_bg_hd"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="887dp"
        android:layout_height="899dp">


        <Button
            android:id="@+id/btn_kamera"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="260dp"
            android:alpha="0.7"
            android:backgroundTint="@color/white"
            android:src="@drawable/button_bg"
            android:text="@string/btn_kamera"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_galeri"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            android:alpha="0.7"
            android:backgroundTint="@color/white"
            android:src="@drawable/button_bg"
            android:text="@string/btn_galeri"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_kamera" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>